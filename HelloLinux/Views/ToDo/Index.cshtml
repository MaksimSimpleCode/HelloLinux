@model IEnumerable<HelloLinux.Models.ToDoList>

@{
    ViewData["Title"] = "Index";
}


<h1>Ваши заметки</h1>

<div class="container">
    <main role="main" class="pb-3">
        @if (TempData["Sucess"] != null)
        {
            <div class="alert alert-success">
                @TempData["Sucess"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
    </main>
</div>
<p>
    <a asp-action="Create">Создайте новую заметку</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil" style="font-size: 1rem; color: turquoise;"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash" style="font-size: 1rem; color: orangered;"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
